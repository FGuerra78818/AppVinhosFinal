@{
    ViewData["Title"] = "Login";
}

<style>
    .bg-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/Images/ImageVineyards.jpg') no-repeat center center fixed;
        background-size: cover;
        filter: blur(8px);
        z-index: -1;
    }

    .center-poster {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        max-width: 300px;
        height: auto;
        z-index: 0;
        cursor: pointer;
    }
    /* overlay for zoom/pan */
    .poster-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.8);
        z-index: 10;
        overflow: hidden;
        cursor: grab;
    }

    .overlay-image {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(2);
        max-width: none;
        max-height: none;
        user-select: none;
        transition: transform 0.1s ease-out;
    }
</style>

<div class="bg-image"></div>
<img src="~/Images/Cartaz.png" alt="Cartaz Promocional" class="center-poster" />
<div class="poster-overlay">
    <img src="~/Images/Cartaz.png" alt="Cartaz Promocional" class="overlay-image" />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var poster = document.querySelector('.center-poster');
            var overlay = document.querySelector('.poster-overlay');
            var img = overlay.querySelector('.overlay-image');
            var isDragging = false;
            var startX, startY;
            var currentX = 0, currentY = 0;
            var scale = 2;

            poster.addEventListener('click', function() {
                overlay.style.display = 'block';
            });
            // close on click outside image
            overlay.addEventListener('click', function(e) {
                if (e.target === overlay) {
                    overlay.style.display = 'none';
                    // reset position & zoom
                    currentX = 0; currentY = 0;
                    scale = 2;
                    img.style.transform = 'translate(-50%, -50%) scale(' + scale + ')';
                }
            });
            // drag to pan
            img.addEventListener('mousedown', function(e) {
                e.preventDefault();
                isDragging = true;
                startX = e.clientX - currentX;
                startY = e.clientY - currentY;
                overlay.style.cursor = 'grabbing';
            });
            document.addEventListener('mousemove', function(e) {
                if (!isDragging) return;
                currentX = e.clientX - startX;
                currentY = e.clientY - startY;
                updateTransform();
            });
            document.addEventListener('mouseup', function() {
                if (!isDragging) return;
                isDragging = false;
                overlay.style.cursor = 'grab';
            });
            // wheel to zoom in/out
            overlay.addEventListener('wheel', function(e) {
                e.preventDefault();
                var delta = e.deltaY < 0 ? 0.1 : -0.1;
                // allow more unzoom: limit between 0.5 and 5
                scale = Math.min(Math.max(scale + delta, 0.5), 5);
                updateTransform();
            });

            function updateTransform() {
                img.style.transform = 'translate(calc(-50% + ' + currentX + 'px), calc(-50% + ' + currentY + 'px)) scale(' + scale + ')';
            }
        });
    </script>
}
