@{
    ViewData["Title"] = "Login";
}

<style>
    .bg-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/Images/ImageVineyards.jpg') no-repeat center center fixed;
        background-size: cover;
        filter: blur(8px);
        z-index: -1;
    }

    .center-poster {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        max-width: 300px;
        height: auto;
        z-index: 0;
        cursor: pointer;
    }
</style>

<div class="bg-image"></div>
<img src="@Url.Content("~/Images/Cartaz.png")" alt="Cartaz Promocional" class="center-poster" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var poster = document.querySelector('.center-poster');
            poster.addEventListener('click', function() {
                var confirmar = confirm('Pretende baixar o cartaz?');
                if (!confirmar) return;
                // criar link de download e simular clique
                var link = document.createElement('a');
                link.href = poster.src;
                link.download = 'Cartaz.png';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            });
        });
    </script>
}
